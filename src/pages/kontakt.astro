---
import Layout from "../layouts/Layout.astro";
import "./global.css";
---

<Layout title="Kontakt">
  <main>
    <div
      class="w-screen h-screen relative bg-center bg-no-repeat bg-cover overflow-hidden"
      style="background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25)), url('/Ebner.jpeg');"
    >
      <div class="w-full h-full flex">
        <div class="mx-auto text-center mb-10">
          <h1
            class="text-5xl sm:text-[10rem] font-mono text-white uppercase mt-20 sm:mt-40"
          >
            Kontakt
          </h1>
          <div class="text-white font-mono mt-5">
            <div class="text-2xl">Email</div>
            <div class="mt-5">
              Davor Ebner: <a href='mailto:"ebnerdavor@gmail.com"'
                >ebnerdavor@gmail.com</a
              >
            </div>
            <div>
              Kahvana: <a href='mailto:"info@kahvana.com"'>info@kahvana.com</a>
            </div>
          </div>
          <div class="text-white font-mono mt-5">
            <div class="text-2xl">Tel/fax</div>
            <div class="mt-5">Davor Ebner:</div>
            <div>Kahvana:</div>
          </div>
          <div class="py-10 flex justify-center items-center gap-10">
            <a href="https://www.instagram.com/_ebner_" class="text-white"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                fill="currentColor"
                class="bi bi-instagram"
                viewBox="0 0 16 16"
              >
                <path
                  d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0h.003zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599.28.28.453.546.598.92.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.47 2.47 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.478 2.478 0 0 1-.92-.598 2.48 2.48 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233 0-2.136.008-2.388.046-3.231.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92.28-.28.546-.453.92-.598.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045v.002zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92zm-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217zm0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334z"
                ></path>
              </svg></a
            >
            <a href="https://www.facebook.com/davorebner" class="text-white"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                fill="currentColor"
                class="bi bi-facebook"
                viewBox="0 0 16 16"
              >
                <path
                  d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"
                ></path>
              </svg></a
            >
            <a
              href="https://open.spotify.com/artist/3HZrXknGhdc2Cs6VhYWc2G"
              class="text-white"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-spotify"
                viewBox="0 0 16 16"
              >
                <path
                  d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.669 11.538a.498.498 0 0 1-.686.165c-1.879-1.147-4.243-1.407-7.028-.77a.499.499 0 0 1-.222-.973c3.048-.696 5.662-.397 7.77.892a.5.5 0 0 1 .166.686zm.979-2.178a.624.624 0 0 1-.858.205c-2.15-1.321-5.428-1.704-7.972-.932a.625.625 0 0 1-.362-1.194c2.905-.881 6.517-.454 8.986 1.063a.624.624 0 0 1 .206.858zm.084-2.268C10.154 5.56 5.9 5.419 3.438 6.166a.748.748 0 1 1-.434-1.432c2.825-.857 7.523-.692 10.492 1.07a.747.747 0 1 1-.764 1.288z"
                ></path>
              </svg></a
            >
            <a href="https://www.tiktok.com/@ebner.official" class="text-white"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-tiktok"
                viewBox="0 0 16 16"
              >
                <path
                  d="M9 0h1.98c.144.715.54 1.617 1.235 2.512C12.895 3.389 13.797 4 15 4v2c-1.753 0-3.07-.814-4-1.829V11a5 5 0 1 1-5-5v2a3 3 0 1 0 3 3V0Z"
                ></path>
              </svg></a
            >
          </div>
        </div>
      </div>
    </div>
    <div class="bg-[#2c2c2c] flex w-full py-10 px-4">
      <div class="container mx-auto flex">
        <iframe
          class="mx-auto w-full max-w-xl"
          style="border-radius:12px"
          src="https://open.spotify.com/embed/track/4WEs3KEFu3cYAzCv2Y5BUy?utm_source=generator&theme=0"
          height="152"
          frameborder="0"
          allowfullscreen=""
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy"></iframe>
      </div>
    </div>
    <div class="w-screen relative">
      <video
        class="object-cover object-center h-screen w-screen"
        src="/3d-render-background.mp4"
        autoplay
        loop
        muted
        playsinline></video>
      <div class="absolute top-0 left-0 w-full h-full bg-black/25"></div>
      <div class="w-full h-full absolute top-0 left-0 flex">
        <div class="container m-auto text-center">
          <h1 class="text-5xl uppercase font-mono text-white mb-10">
            Najnoviji singlovi
          </h1>
          <div class="w-full flex items-center justify-center gap-10 mb-10">
            <a
              href="https://www.youtube.com/watch?v=sw2EDCRs6eQ"
              target="_blank"
            >
              <div class="w-20 h-20 sm:w-80 sm:h-80">
                <img
                  class="w-full h-full"
                  src="https://e-cdn-images.dzcdn.net/images/cover/d2bcebbbc8fa517f6b8f322cad5c03af/264x264-000000-80-0-0.jpg"
                  alt=""
                />
              </div>
            </a>
            <a
              href="https://www.youtube.com/watch?v=V8B3JEJpuCE"
              target="_blank"
            >
              <div class="w-20 h-20 sm:w-80 sm:h-80">
                <img
                  class="w-full h-full"
                  src="https://dertmusic.com/wp-content/uploads/2022/06/rsz_563837cf-8b48-5283-1ba3-e3637031d9a9-1024x1024.jpg"
                  alt=""
                />
              </div>
            </a>
          </div>
          <a href="https://www.youtube.com/@EBNERofficial" target="_blank">
            <button
              class="mx-auto py-5 px-10 bg-white text-black uppercase text-xl shadow"
              style="font-family: hacked;"
            >
              Jo≈° muzike
            </button>
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
